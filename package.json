{
  "name": "shadd",
  "version": "1.0.2",
  "description": "Installable global alias/shorthand of `npx shadcn add` that works with all package managers via auto-detection",
  "type": "module",
  "author": "Brandon McConnell",
  "license": "MIT",
  "homepage": "https://github.com/brandonmcconnell/shadd#readme",
  "bugs": {
    "url": "https://github.com/brandonmcconnell/shadd/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brandonmcconnell/shadd.git"
  },
  "keywords": [
    "components",
    "shadcn",
    "registry",
    "vercel",
    "react",
    "nextjs",
    "next",
    "reactjs",
    "shadcn-ui",
    "shadcnui",
    "radix",
    "radix-ui"
  ],
  "bin": {
    "shadd": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "scripts": {
    "build": "tsdown && npm run postbuild",
    "dev": "tsdown --watch",
    "prepare": "tsdown",
    "postbuild": "node scripts/postbuild.mjs",
    "test": "node -e \"console.log('no tests')\""
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "dependencies": {
    "package-manager-detector": "^1.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "tsdown": "^0.14.2",
    "typescript": "^5.6.2"
  }
}
